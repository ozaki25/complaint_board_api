# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /categories                controllers.CategoriesController.index()
POST    /categories                controllers.CategoriesController.create()
PATCH   /categories/:id            controllers.CategoriesController.update(id: Long)
DELETE  /categories/:id            controllers.CategoriesController.delete(id: Long)

GET     /categories/setup          controllers.CategoriesController.setUp()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
